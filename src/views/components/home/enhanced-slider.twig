{#
| Variable                       | Type     | Description                                                                  |
|--------------------------------|----------|------------------------------------------------------------------------------|
| component                      | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.slides[].image       | string   | Image url                                                                    |
| component.slides[].title       | ?string  |                                                                              |
| component.slides[].description | ?string  |                                                                              |
| component.slides[].button      | ?string  | Button text                                                                  |
| component.slides[].url         | ?string  | Button URL                                                                   |
| component.slides               | object[] | list of slides                                                               |
| position                       | int      | Sorting number start from zero                                               |
#}
<section class="hero-slider-section relative overflow-hidden">
    <salla-slider 
      id="main-slider-{{ position }}"
      auto-play
      slider-config='{
        "lazy": "false",
        "loop": true,
        "speed": 800,
        "autoplay": {
          "delay": 5000,
          "disableOnInteraction": false
        },
        "effect": "fade",
        "fadeEffect": {
          "crossFade": true
        }
      }'
      type="fullwidth">
        <div slot="items">
            {% for slide in component.slides %}
                <div class="swiper-slide hero-slide">
                    {# Background Image with Overlay #}
                    <div class="hero-slide__bg" style="background-image: url({{ slide.image }});"></div>
                    <div class="hero-slide__overlay"></div>
                    
                    {# Content Container #}
                    <div class="hero-slide__content container">
                        <div class="hero-slide__text-wrapper">
                            {% if slide.title %}
                                <h1 class="hero-slide__title" data-swiper-parallax="-300">
                                    {{ slide.title }}
                                </h1>
                            {% endif %}
                            
                            {% if slide.description %}
                                <p class="hero-slide__description" data-swiper-parallax="-200">
                                    {{ slide.description }}
                                </p>
                            {% endif %}
                            
                            {% if slide.button %}
                                <div class="hero-slide__button-wrapper" data-swiper-parallax="-100">
                                    <a href="{{ slide.url|default('#') }}" class="hero-slide__button">
                                        <span>{{ slide.button }}</span>
                                        <i class="sicon-keyboard_arrow_left"></i>
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section>

<style>
/* ============================================
   HERO SLIDER - CUSTOM DESIGN
   ============================================ */

.hero-slider-section {
    position: relative;
    width: 100%;
    min-height: 500px;
}

.hero-slide {
    position: relative;
    width: 100%;
    min-height: 500px;
    height: 600px;
    display: flex;
    align-items: center;
}

/* Background Image */
.hero-slide__bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
}

/* Dark Overlay */
.hero-slide__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
        to right,
        rgba(0, 0, 0, 0.6) 0%,
        rgba(0, 0, 0, 0.4) 50%,
        rgba(0, 0, 0, 0.3) 100%
    );
    z-index: 2;
}

/* Content Container */
.hero-slide__content {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 2rem 1rem;
}

.hero-slide__text-wrapper {
    max-width: 600px;
    text-align: right;
    color: white;
}

/* Title */
.hero-slide__title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: white;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 0.8s ease-out;
}

/* Description */
.hero-slide__description {
    font-size: 1.125rem;
    line-height: 1.8;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.95);
    max-width: 500px;
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    animation: fadeInUp 0.8s ease-out 0.2s both;
}

/* Button */
.hero-slide__button-wrapper {
    animation: fadeInUp 0.8s ease-out 0.4s both;
}

.hero-slide__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 2rem;
    background: rgba(212, 165, 116, 0.95);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(212, 165, 116, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.hero-slide__button:hover {
    background: rgba(192, 149, 99, 1);
    transform: translateX(-5px);
    box-shadow: 0 6px 20px rgba(212, 165, 116, 0.4);
}

.hero-slide__button i {
    font-size: 1.25rem;
    transition: transform 0.3s ease;
}

.hero-slide__button:hover i {
    transform: translateX(-3px);
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 1024px) {
    .hero-slide {
        height: 500px;
        min-height: 400px;
    }
    
    .hero-slide__title {
        font-size: 2.5rem;
    }
    
    .hero-slide__description {
        font-size: 1rem;
    }
}

@media (max-width: 768px) {
    .hero-slide {
        height: 450px;
        min-height: 350px;
    }
    
    .hero-slide__content {
        padding: 1.5rem 1rem;
    }
    
    .hero-slide__text-wrapper {
        max-width: 100%;
    }
    
    .hero-slide__title {
        font-size: 2rem;
        margin-bottom: 1rem;
    }
    
    .hero-slide__description {
        font-size: 0.9375rem;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }
    
    .hero-slide__button {
        padding: 0.75rem 1.5rem;
        font-size: 0.9375rem;
    }
}

@media (max-width: 480px) {
    .hero-slide {
        height: 400px;
        min-height: 300px;
    }
    
    .hero-slide__title {
        font-size: 1.75rem;
    }
    
    .hero-slide__description {
        font-size: 0.875rem;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
}

/* RTL Support */
[dir="rtl"] .hero-slide__text-wrapper {
    text-align: right;
}

[dir="ltr"] .hero-slide__text-wrapper {
    text-align: left;
}

[dir="rtl"] .hero-slide__button:hover {
    transform: translateX(5px);
}

[dir="rtl"] .hero-slide__button:hover i {
    transform: translateX(3px);
}

/* Dark overlay for better text readability */
.hero-slide__overlay {
    background: linear-gradient(
        to left,
        rgba(0, 0, 0, 0.3) 0%,
        rgba(0, 0, 0, 0.5) 50%,
        rgba(0, 0, 0, 0.7) 100%
    );
}

[dir="ltr"] .hero-slide__overlay {
    background: linear-gradient(
        to right,
        rgba(0, 0, 0, 0.3) 0%,
        rgba(0, 0, 0, 0.5) 50%,
        rgba(0, 0, 0, 0.7) 100%
    );
}
</style>
