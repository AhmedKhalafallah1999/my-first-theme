{# 
  Top Banner Component 
  Design: Animated Marquee with Glassmorphism
#}
<section class="top-banner-section">
    <div class="top-banner-wrapper">
        <div class="marquee-track">
            {# Original Content #}
            <div class="marquee-content">
                {% for item in component['top-banner'] %}
                    <div class="banner-item">
                        <i class="sicon-star banner-icon"></i>
                        <span class="banner-text">{{ item.sentence }}</span>
                    </div>
                {% endfor %}
            </div>

            {# Duplicate Content for Seamless Loop #}
            <div class="marquee-content">
                {% for item in component['top-banner'] %}
                    <div class="banner-item">
                        <i class="sicon-star banner-icon"></i>
                        <span class="banner-text">{{ item.sentence }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
    .top-banner-section {
        width: 100%;
        height: 125px;
        background-color: #E8AE8787; /* User defined color with alpha */
        background: rgba(232, 174, 135, 0.53); /* Fallback/Explicit RGBA */
        backdrop-filter: blur(10px); /* Glassmorphism effect */
        -webkit-backdrop-filter: blur(10px);
        overflow: hidden;
        position: relative;
        display: flex;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .top-banner-wrapper {
        width: 100%;
        overflow: hidden;
    }

    .marquee-track {
        display: flex;
        width: fit-content;
        animation: marquee-scroll 25s linear infinite;
    }

    .marquee-content {
        display: flex;
        align-items: center;
        flex-shrink: 0;
    }

    .banner-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 0 60px;
        position: relative;
    }

    /* Separator dot between items */
    .banner-item::after {
        content: '';
        position: absolute;
        right: 0;
        width: 6px;
        height: 6px;
        background-color: rgba(74, 59, 50, 0.4);
        border-radius: 50%;
    }
    
    .banner-item:last-child::after {
        display: none; /* Hide for the very last item in the set, though in loop it might be needed. */
    }

    .banner-icon {
        font-size: 1.2rem;
        color: #4A3B32;
        opacity: 0.8;
    }

    .banner-text {
        font-size: 1.5rem; /* Matches the large scale of 125px height */
        font-weight: 700;
        color: #4A3B32; /* Dark brown for contrast against peach */
        white-space: nowrap;
        font-family: 'DIN Next LT Arabic', sans-serif; /* Salla default font usually */
    }

    @keyframes marquee-scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }

    /* Pause animation on hover for readability */
    .top-banner-section:hover .marquee-track {
        animation-play-state: paused;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .top-banner-section {
            height: 80px;
        }
        .banner-text {
            font-size: 1.1rem;
        }
        .banner-item {
            padding: 0 30px;
        }
    }
</style>
